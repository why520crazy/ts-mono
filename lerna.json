{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "noGitTagVersion": true,
      "noPush": true
    },
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "verifyAccess": false,
      "verifyRegistry": false,
      "message": "chore: release %s",
      "noGitTagVersion": true,
      "noPush": true
    }
  },
  "version": "0.4.8"
}
